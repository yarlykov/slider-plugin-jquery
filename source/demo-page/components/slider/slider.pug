mixin slider({ slider={} })
  -
    const { type={}, range=false, labels=[], tooltips=true, defaultValue={}, units="", color="" } = slider

    const typeModifier = type.horizontal ? "horizontal" : "vertical"
    const colorModifier = color

    const typeClass = `slider_${typeModifier}`
    const scaleClass = `slider__scale_${typeModifier}`

    const fillClass = `slider__fill_${typeModifier}`
    const colorFillClass = `slider__fill_${colorModifier}`

    const handleClass = `slider__handle_${typeModifier}`
    const handleColorClass = `slider__handle_${colorModifier}`

    const tooltipClass = `slider__tooltip_${typeModifier}`
    const tooltipColorClass = `slider__tooltip_${colorModifier}`

  #slider.slider(class=typeClass)
    .slider__scale(class=scaleClass)
      #fill.slider__fill(class=[fillClass, colorFillClass])
      #handle.slider__handle(class=[handleClass, handleColorClass])
        .slider__tooltip(class=[tooltipClass, tooltipColorClass])
          span.tooltip__value #{defaultValue.single} #{units}
          .slider__tooltip_arrow
      .slider__labels.slider__labels_horizontal
        each label in labels
          .slider__labels-item #{label}
