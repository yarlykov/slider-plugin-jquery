{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "Root/*": [
        "*"
      ],
      "Source/*": [
        "source/*"
      ],
      "Components/*": [
        "source/components/*"
      ],
    }
  },
  "exclude": ["node_modules"]
}
